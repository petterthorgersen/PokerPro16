<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.StackPane" xmlns:fx="http://javafx.com/fxml" stylesheets="" >
	<VBox spacing="20" alignment="CENTER" >
		<HBox alignment="CENTER" spacing="40">
			<Label fx:id ="nameLabel" text="Me Player" />
			<TextField fx:id="name" promptText="Set name" onAction="#setName" />
		</HBox>
		<HBox alignment="CENTER" spacing="40">
			<Label fx:id ="smallLabel" text="25" />
			<TextField fx:id="small" promptText="Set small Blind" onAction="#setSmallBlind"/>
		</HBox>
		<HBox alignment="CENTER" spacing="40">
			<Label fx:id ="bigLabel" text="50" />
			<TextField fx:id="big" promptText="Set big Blind" onAction="#setBigBlind"/>
		</HBox>
		<HBox alignment="CENTER" spacing="40">
			<Label fx:id ="startValueLabel" text="100" />
			<TextField fx:id="startValue" promptText="Set start money amount" onAction="#setStartMoney"/>
		</HBox>
		<HBox alignment="CENTER" spacing="40">
			<Label fx:id ="avatarLabel" text="Standard" />
			<TextField fx:id="avatar" promptText="Set Avatar" onAction="#setAvatar"/>
		</HBox>
		<HBox alignment="CENTER" spacing="40">
			<Label fx:id ="numberBotsLabel" text="4" />
			<TextField fx:id="numberBots" promptText="Number of Bots" onAction="#numberOfBots"/>
		</HBox>
		<Button fx:id="botButton" onAction="#setBotDificulty" />
		<Button text="OK" onAction="#ok"/>
		<Button text="CANCEL" onAction="#cancel"/>		
	</VBox>
</fx:root>
