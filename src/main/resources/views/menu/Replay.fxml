<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import org.gruppe2.ui.javafx.PokerApplication?>
<fx:root type="javafx.scene.layout.GridPane" xmlns:fx="http://javafx.com/fxml"
		 vgap="${root.width*0.007}" hgap="${root.width*0.02}" alignment="CENTER">

	<fx:define>
		<PokerApplication fx:factory="getApplication" fx:id="app"/>
		<PokerApplication fx:factory="getRoot" fx:id="root"/>
	</fx:define>

	<Label  text="Choose a game to replay" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.ColumnSpan="1" font="${app.bigFont}"/>
 	<ComboBox fx:id="replays" GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity"/>
 	<Button fx:id="start" text="Start" onAction="#startReplay" GridPane.columnIndex="1" GridPane.rowIndex="1" font="${app.bigFont}"/>
 	

</fx:root>